{
  "name": "synapse",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --filter=@synapse/api",
    "migrate": "turbo run migrate --filter=@synapse/api",
    "seed": "turbo run seed --filter=@synapse/api",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.19",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
