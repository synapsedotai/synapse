{
  "name": "@synapse/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "bunx tsx watch src/server.ts",
    "migrate": "bunx tsx src/bin/migrate.ts",
    "seed": "bunx tsx src/bin/seed.ts",
    "prisma:push": "bunx prisma db push --schema prisma/schema.prisma",
    "lint": "bunx eslint .",
    "lint:fix": "bunx eslint . --fix",
    "typecheck": "bunx tsc --noEmit",
    "test": "bunx vitest run"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.63.1",
    "@prisma/client": "^5.20.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "pg": "^8.12.0",
    "pg-format": "^1.0.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "tsx": "^4.19.2",
    "vitest": "^2.1.3",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.10.2",
    "@types/pg-format": "^1.0.2",
    "prisma": "^5.20.0"
  }
}
